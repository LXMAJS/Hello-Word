/* pages/index/index.wxss */

.basic-container {
  height: 100%;
}

.containers {
  background: #fff;
  margin-bottom: 10px;
}

.top-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 35%;
}

.center-showplace {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100px;
  height: 100%;
}

.mine-avatar {
  display: flex;
  justify-content: center;
  height: 80px;
  width: 80px;
  border: 1px solid #eee;
  border-radius: 40px;
  -o-border-radius: 40px;
  -ms-border-radius: 40px;
  -moz-border-radius: 40px; /* 老的 Firefox */
  -webkit-border-radius: 40px;
}

.mine-nickname {
  display: flex;
  justify-content: center;
  margin-top: 10px;
}

.center-container {
  padding: 5px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: left;
  align-items: center;
  height: 130px;
}

.center-button {
  width: 80px;
  height: 90px;
  margin: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.center-button-icon {
  width: 30px;
  height: 30px;
}

.footer-container {
  max-height: 300px;
  width: 100%;
  border-collapse: collapse;
}

.long-guide {
  /*width: 100%;*/
  height: 46px;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  padding: 2px 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.long-guide-header {
  border-bottom: 0;
}

.long-guide-remind {
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
}

.long-guide-icon {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.angle-window {
  display: block;
  height: 20px;
  width: 20px;
  overflow: hidden;
}

.right-angle {
  width: 20px;
  height: 20px;
  border: 1px solid #999;
  transform: rotate(45deg);
  -o-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  -moz-transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  margin-left: -18px;
}
